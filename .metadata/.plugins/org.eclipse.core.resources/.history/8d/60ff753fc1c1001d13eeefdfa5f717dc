package com.generation.helloworld.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

//indica ao spring que essaé uma classe controladora
@RestController


//indica um endpoint para nossa aplicação.
@RequestMapping("/hello")
public class HelloController {

	@GetMapping
	
	public String batata() {
		return "Alo bebê buchinho! Te amo, coisa lindaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
				+ "aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa e cornin";
	}
	
}
